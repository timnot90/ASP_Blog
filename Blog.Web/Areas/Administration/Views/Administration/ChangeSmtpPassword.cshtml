@using Blog.Core.Extensions
@model Blog.Web.Areas.Administration.Models.ChangeSmtpPasswordModel

@{
    ViewBag.Title = "Change Smtp Server Password";
}
<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm("ChangeSmtpPassword", "Administration", new { area = "Administration" }, FormMethod.Post, new { @class = "" }))
        {
            @Html.CustomValidationSummary()
            @Html.PasswordWithLabelFor(m => m.CurrentPassword)
            @Html.PasswordWithLabelFor(m => m.NewPassword)
            @Html.PasswordWithLabelFor(m => m.NewPasswordConfirmed)
            <div class="form-group pull-right">
                <div class="">
                    <button class="btn btn-default">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        }
    </div>
</div>