@{
    Layout = null;
}
@using Blog.Web
@model Blog.Web.Models.Shared.NavigationBarModel
<nav class="navbar navbar-inverse navbar-fixed-top blog-navbar-js" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink(Model.SiteName, "Index", "Home", htmlAttributes: new { @class = "navbar-brand" }, routeValues: new { area = "" })
        </div>

        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a href="@Url.Action( "Index", "Home", new {area = ""} )">
                        <i class="glyphicon glyphicon-list"></i> View Posts
                    </a>
                </li>
                @if (WebSecurity.IsAuthenticated)
                {
                    <li>
                        <a href="@Url.Action( "EditProfile", "Account", new {area = ""} )">
                            <i class="glyphicon glyphicon-user"></i> @WebSecurity.CurrentUserName
                        </a>
                    </li>
                }
                else
                {
                    <li>
                        <a href="@Url.Action( "Register", "Account", new {area = ""} )">
                            <i class="glyphicon glyphicon-edit"></i> Register
                        </a>
                    </li>
                }
                <li>
                    <a href="@Url.Action( "Index", "About", new {area = ""} )">
                        <i class="glyphicon glyphicon-info-sign"></i> About
                    </a>
                </li>
                @if (CustomRoles.IsUserInRole(CustomRoles.Administrator))
                {
                    <li>
                        <a href="@Url.Action( "Index", "Home", new {area = "Administration"} )">
                            <i class="glyphicon glyphicon-eye-open"></i> Administration
                        </a>
                    </li>
                }
                <li>
                    @if (WebSecurity.IsAuthenticated)
                    {
                        <a href="@Url.Action( "Logout", "Account", new {area = "", returnUrl = HttpContext.Current.Request.Url.AbsolutePath} )">
                            <i class="glyphicon glyphicon-log-out"></i> Logout
                        </a>
                    }
                    else
                    {
                        <a href="@Url.Action( "Login", "Account", new {area = ""} )">
                            <i class="glyphicon glyphicon-log-in"></i> Login
                        </a>
                    }
                </li>
            </ul>
        </div>
    </div>
</nav>


