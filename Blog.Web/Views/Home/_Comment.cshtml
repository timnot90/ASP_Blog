@using Blog.Web
@model Blog.Web.Models.Home.CommentModel

<h4>
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.BlogentryId)
    @Model.Header
    <small>@Model.CreationDateString, by <span class="section-colored">@Model.Creator.UserName</span></small>
    @if (Roles.IsUserInRole(CustomRoles.Administrator))
    {
        <a href="@Url.Action("DeleteComment", new {commentId = Model.Id})" class="btn btn-danger pull-right">
            <i class="glyphicon glyphicon-trash"></i>
            Delete
        </a>
    }
</h4>
<p>@Model.Body</p>