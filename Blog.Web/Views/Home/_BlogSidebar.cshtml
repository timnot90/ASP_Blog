@using Blog.Web.Models.Home
@model Blog.Web.Models.Home.BlogSidebarModel
@{
    Layout = null;
}
<div class="col-lg-4">
    <div class="well">
        <h4>Search</h4>
        <div class="input-group">
            <input type="text" class="form-control">
            <span class="input-group-btn">
                <button class="btn btn-default" type="button">
                    <i class="fa fa-search"></i>
                </button>
            </span>
        </div>
    </div>
    <div class="well">
        <h3>Filter</h3>
        <div class="form-group">
            <h4>Categories</h4>
            @{ int i = 0; }
            @foreach (CategoryModel category in Model.Categories)
            {
                <span>@Html.ActionLink( category.Name + " (" + @category.NumberOfPosts + ")", "Index", "Home", new {categoryId = category.Id}, null )  </span>
                if (i != Model.Categories.Count - 1)
                {
                    @:|
                }
                i++;
            }
        </div>
        <div class="form-group">            
            @foreach (string year in Model.AvailableYears)
            {
                <h4>@Html.ActionLink( year, "Index", "Home", new {monthAndYear = year}, null )</h4>
                int j = 0;
                foreach (string month in Model.AvailableMonths)
                {
                    <span>@Html.ActionLink( month, "Index", "Home", new {monthAndYear = month + year}, null ) </span>
                    if (j != Model.AvailableMonths.Count - 1)
                    {
                        @:|
                    }
                    j++;
                }
                <br/>
            }
        </div>
    </div>
</div>