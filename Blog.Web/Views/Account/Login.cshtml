@model Blog.Web.Models.Account.LoginModel

@{
    ViewBag.Title = "Login";
}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Login
                <small>Blog Homepage</small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    @Html.ActionLink("Home", "Index", "Home")
                </li>
                <li class="active">Login</li>
            </ol>
        </div>
    </div>
    <div class="row">
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-signin", @role = "form" }))
        {
            <h2 class="form-signin-heading">Please sign in</h2>
            @Html.ValidationSummary()

            <div class="">
                @Html.LabelFor(m => m.UserName, new{@class="sr-only"})
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @required = "true", @autofocus = "true", @placeholder = @Html.DisplayNameFor(m => m.UserName) })
            </div>

            <div class="">
                @Html.LabelFor(m => m.Password, new { @class = "sr-only" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @required = "true", @autofocus = "true", @placeholder = @Html.DisplayNameFor(m => m.Password) })
            </div>
            <div class="text-right">Forgot your NewPassword? @Html.ActionLink("Click here to reset", "Register", "Account")</div>
            <div class="text-right">New User? @Html.ActionLink("Click here to register", "Register", "Account")</div>
            <button class="btn btn-lg btn-primary btn-block">Login</button>
        }
    </div>
</div>
