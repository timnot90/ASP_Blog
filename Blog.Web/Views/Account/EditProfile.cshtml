@model Blog.Web.Models.Account.UserProfileModel
@{
    ViewBag.Title = "Profile";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Edit Profile
                <small>Blog Homepage</small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    @Html.ActionLink("Home", "Index", "Home")
                </li>
                <li class="active">My Profile</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            @using (Html.BeginForm("EditProfile", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.ValidationSummary()
                <fieldset>
                    <div class="form-group">
                        @Html.HiddenFor(m => m.ID)
                        @Html.UserProfileTextBoxFor(m => m.UserName, true)
                        @Html.ActionLink("Change Password", "ChangePassword", "Account", null, new { @class = "col-lg-offset-2" })
                        @Html.UserProfileTextBoxFor(m => m.Email, true)
                        @Html.UserProfileTextBoxFor(m => m.Street)
                        @Html.UserProfileTextBoxFor(m => m.HouseNumber)
                        @Html.UserProfileTextBoxFor(m => m.Town)
                        @Html.UserProfileTextBoxFor(m => m.Zip)
                        @Html.UserProfileTextBoxFor(m => m.Forename)
                        @Html.UserProfileTextBoxFor(m => m.LastName)
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2">
                            <button class="btn btn-default">Cancel</button>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </div>
                </fieldset>
            }
        </div>
    </div>
</div>
