@model Blog.Web.Models.Account.UserProfileModel
@{
    ViewBag.Title = "My Profile";
}
<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm("EditProfile", "Account", FormMethod.Post, new {@class = ""}))
        {
            @Html.ValidationSummary()
            @Html.HiddenFor(m => m.Id)
            @Html.HiddenFor(m => m.UserName)
                @*                        @Html.UserProfileTextBoxFor(m => m.UserName, true)*@
            @Html.UserProfileTextBoxFor(m => m.DisplayName)
            @Html.ActionLink("Change Password", "ChangePassword", "Account", null, new {@class = "form-group"})
            @Html.UserProfileTextBoxFor(m => m.Email, true)
            @Html.UserProfileTextBoxFor(m => m.Street)
            @Html.UserProfileTextBoxFor(m => m.HouseNumber)
            @Html.UserProfileTextBoxFor(m => m.Town)
            @Html.UserProfileTextBoxFor(m => m.Zip)
            @Html.UserProfileTextBoxFor(m => m.Forename)
            @Html.UserProfileTextBoxFor(m => m.LastName)
            <div class="form-group pull-right">
                <div class="">
                    <button class="btn btn-default">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        }
    </div>
</div>